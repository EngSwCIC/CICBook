<%= form_for([@duty.pet, @duty]) do |form| %>
  <% if @duty.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@duty.errors.count, "error") %> prohibited this duty from being saved:</h2>

      <ul>
      <% @duty.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :descrição %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :importância %>
    <%= form.number_field :importance, in: 1..5, step: 1 %>
  </div>

  <div class="field">
    <%= form.label "frequência em horas" %>
    <%= form.number_field :frequency, in: 1..1000 %>
  </div>

  <div class="field">
    <%= form.label "data de execução" %>
    <%= form.datetime_local_field :until %>
  </div>

  <div class="field">
    <%= form.label :need %><br />
    <%= form.collection_select :need_id, Need.all, :id, :name, {prompt: "Need"} %>
  </div>


  <div class="field">
    <%= form.label :feito %>
    <%= form.check_box :done %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
