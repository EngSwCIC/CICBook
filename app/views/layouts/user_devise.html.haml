!!!
%html
  %head
    %title PleaseDontDie
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag    'user', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'user', 'data-turbolinks-track': 'reload'
    %link{:href => "css/uikit.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "css/responsive.css", :media => "only screen and (max-width: 1200px)", :rel => "stylesheet"}/
  %body
    = render 'layouts/navbar'
    .container{:style => "padding-top: 3%;" }
      %article.card-body.bg-info.mx-auto{:style => "max-width: 400px; padding-top: 25px;"}
        = yield
        = render 'layouts/shared/notifications'