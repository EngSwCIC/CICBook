%p
  %strong Name:
  = @user.first_name
%p
  %strong Sobrenome:
  = @user.last_name
%p
  %strong Email:
  = current_user.email
%p
  %strong Data de nascimento:
  = @user.birthday
%p
  %strong Address:
  = @user.address
%p
  %strong Phone:
  = @user.phone
%p
  = link_to 'Alterar dados',edit_profile_user_path(current_user.id)

- if @user.group
  = link_to 'Group', group_path(@user.group) 
- else
  = link_to 'Adicionar grupo', new_group_path

  = render 'layouts/shared/notifications'
